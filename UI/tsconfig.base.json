{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["vuetify"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core-admin/*": ["libs/core-admin/src/lib/*"],
      "@core-public/*": ["libs/core-public/src/lib/*"],
      "@cssa-ccw/core-admin": ["libs/core-admin/src/index.ts"],
      "@cssa-ccw/core-public": ["libs/core-public/src/index.ts"],
      "@cssa-ccw/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@cssa-ccw/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@shared-ui/*": ["libs/shared/ui/src/lib/*"],
      "@shared-utils/*": ["libs/shared/utils/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
